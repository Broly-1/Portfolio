rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // About collection - public read, authenticated write
    match /about/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Projects collection - public read, authenticated write
    match /projects/{projectId} {
      allow read: if true;
      allow write: if request.auth != null;
      allow delete: if request.auth != null;
    }
    
    // Home content collection - public read, authenticated write
    match /homeContent/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Analytics collection - public read and write (for view counting)
    match /analytics/{document=**} {
      allow read: if true;
      allow write: if true;
    }
    
    // Default deny all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
